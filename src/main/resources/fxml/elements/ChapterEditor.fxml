<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.SVGPath?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ChapterEditorController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox spacing="14.0" AnchorPane.topAnchor="16.0" AnchorPane.rightAnchor="16.0"
              AnchorPane.bottomAnchor="16.0" AnchorPane.leftAnchor="16.0" styleClass="chapterEditor-container">
            <!-- Header -->
            <Label text="Select a chapter"  styleClass="header-label" fx:id="headerLabel"/>

            <!-- Title -->
            <VBox spacing="6.0">
                <Label text="Title" styleClass="section-label"/>
                <TextField fx:id="titleField" promptText="Title" styleClass="title-field"/>
            </VBox>

            <!-- Subtasks -->
            <VBox spacing="8.0">
                <Label text="Subtasks" styleClass="section-label"/>

                <!-- Bordered container -->
                <VBox fx:id="subtasksBox" spacing="8.0" prefHeight="160.0" styleClass="subtasks-box">
                    <padding>
                        <Insets top="14" right="14" bottom="14" left="14"/>
                    </padding>
                </VBox>

                <!-- Add Subtask row -->
                <HBox alignment="CENTER_LEFT" spacing="8.0" fx:id="addRow" styleClass="add-row">
                    <!-- Plus icon via SVG so no image dependency -->
                    <SVGPath content="M12 5v7H5v2h7v7h2v-7h7v-2h-7V5z"
                             scaleX="0.9" scaleY="0.9" styleClass="plus-icon"/>
                    <Button fx:id="addSubtaskButton" text="Add Subtask"

                            mnemonicParsing="false" styleClass="add-button"/>
                </HBox>
            </VBox>

            <!-- Spacer -->
            <Region VBox.vgrow="ALWAYS"/>

            <!-- Action buttons -->
            <HBox spacing="10.0" alignment="CENTER_RIGHT" styleClass="action-bar">
                <Button fx:id="dangerButton" text="Button" mnemonicParsing="false" styleClass="danger-button"/>
                <Button fx:id="secondaryButton" text="Button" mnemonicParsing="false" styleClass="secondary-button"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
